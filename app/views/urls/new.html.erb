<% title(_('Securely Send URLs')) %>

<div class='container'>
<%= render partial: "shared/topnav" %>

<%= form_for @push do |f| %>
    <div class='row'>
        <div class='col-sm-8'>
            <div class='row mb-3'>
                <div class='col'>
                    <div class="card">
                        <h5 class="card-header">URL Redirection</h5>
                        <div class="card-body">
                            <div class="my-3">
                                <%= f.text_field(:payload, { class: "form-control",
                                                            placeholder: _('Enter the URL to redirect to...'),
                                                            autocomplete: "off",
                                                            spellcheck: "false",
                                                            autofocus: true,
                                                            required: true }) %>
                            </div>
                        </div>
                        <div id="file-count-footer" class="card-footer text-muted"> <%= _('Specify a URL to redirect to.') %> </div>
                    </div>
                </div>
            </div>
            <div class='row'>
                <p><%= _('Expire secret link and delete after:') %></p>
                <div class='col-8'>
                    <%= range_field_tag("password_expire_after_days", Settings.expire_after_days_default,
                                        { :name => "url[expire_after_days]",
                                          :class => "form-range",
                                          :min => Settings.expire_after_days_min,
                                          :max => Settings.expire_after_days_max,
                                          :x_default => Settings.expire_after_days_default,
                                          :step => "1" })%>
                </div>
                <div class='col-4'>
                    <label for='password_expire_after_days' id='daysrange'><%=Settings.expire_after_days_default %></label>
                </div>
            </div>

            <div class='row'>
                <div class='col-8'>
                    <%=range_field_tag("password_expire_after_views", Settings.expire_after_views_default,
                                       { :name => "url[expire_after_views]",
                                         :class => "form-range",
                                         :min => Settings.expire_after_views_min,
                                         :max => Settings.expire_after_views_max,
                                         :x_default => Settings.expire_after_views_default,
                                         :step => "1" })%>
                </div>

                <div class='col-4'>
                    <label for='password_expire_after_views' id='viewsrange'><%= Settings.expire_after_views_default %> <%= _('Views') %></label>
                </div>
            </div>
            <div class='row'>
                <div class='col'>
                    <div class='mb3'>
                        <p class='text-center text-muted'><%= _('(whichever comes first)') %></p>
                    </div>
                </div>
            </div>

            <div class='row'>
                <div class='col'>
                    <div class="list-group mx-0">
                        <% if Settings.enable_retrieval_step %>
                            <label class="list-group-item d-flex gap-2">
                            <%=check_box_tag "url[retrieval_step]", nil, Settings.retrieval_step_default,
                                            { class: 'form-check-input flex-shrink-0',
                                            x_default: Settings.retrieval_step_default } %>
                            <span>
                                <%= _('Use a 1-click retrieval step') %>
                                <small class="d-block text-muted"><%= _('Helps to avoid chat systems and URL scanners from eating up redirects.') %></small>
                            </span>
                            </label>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class='col'>
            <div class='row mb-3'>
                <label for="url_note" class="form-label">Reference</label>
                <%= f.text_area(:note, { class: "form-control",
                                        rows: 3,
                                        placeholder: _('Encrypted and visible only to you.'),
                                        autocomplete: "off" }) %>
            </div>
            <div class='row mb-3'>
                <span class="text-muted">
                    <%= _('A secret URL will be generated that will redirect to the URL specified.') %>
                </span>
            </div>
            <div class='row mb-3'>
                <span class="text-muted">
                    <%= _('Upon expiration, the push redirect will be deleted entirely.') %>
                    <%= _('An audit log of activity will be available.') %>
                </span>
            </div>
        </div>
    </div>
    <div class='row'>
        <div class='col'>
            <p class='my-3'>
                <%=f.submit(:value => "#{_('Push It!')}", :class => "form-control btn btn-primary", type: 'submit', 'data-disable-with' => _('Pushing...'))%>
            </p>
        </div>
    </div>
<% end %>
</div>